<main class="contenedor">
  <form action="/iniciar-sesion" method="POST" class="default-form">
    <div class="campo">
      <label for="email">E-mail</label>
      <input type="email" name="email" placeholder="Tu Email" />
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Tu Password" />
    </div>
    <div class="campo acciones">
      <a href="/crear-cuenta">Crea una cuenta</a>
      <a href="/reestablecer-password">Olvide mi password</a>
    </div>
    <div class="campo h-20">
      <input type="submit" value="Iniciar Sesion" class="btn btn-azul" />
    </div>
  </form>
</main>